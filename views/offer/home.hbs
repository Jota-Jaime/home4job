<section class="home">
<div class="aside">
  <a class="newOfferLink"href="/offer/newoffer">Publicar una nueva oferta +</a>
  <div class="filters">
    <div class="selectorsContainer">
      <label for="cities">Ciudad</label>
      <select name="city" class="citySelector" value="">
        <option value="all">Todas</option>
        <option value="Madrid">Madrid</option>
        <option value="Barcelona">Barcelona</option>
        <option value="Valencia">Valencia</option>
        <option value="Sevilla">Sevilla</option>
        <option value="Bilbao">Bilbao</option>
        <option value="Zamora">Zamora</option>
      </select>
      <label for="jobs">Trabajos</label>
      <select name="job" class="jobSelector" value="">
        <option value="all">Todas</option>
        <option value="Jardineria">Jardinería</option>
        <option value="Limpieza">Limpeza</option>
        <option value="Reparacion">Reparación</option>
        <option value="Cuidador">Cuidador</option>
      </select>
      </div>
    <button id="navFilter" class="greenbutton" onclick="filterOffers()">Filtrar</button>  
  </div>
  <div class="foundOffers">
    {{#each allOffers}}
    <div class="offerCard" onclik="getOfferDetails()">
      <h3>{{city}}<span>    ({{job}})</span></h3>
      <img src="{{imgPath}}" alt="offerPhoto">
        <form action="" class="offerdetailsSelector">
          <input type="hidden" class="id" value="{{_id}}">
        </form>
    </div>
    {{/each}}
  </div>
</div>
<div class="offerDetails">
  <h1>Selecciona una de nuestras ofertas para comenzar tu viaje</h1>
</div>
</section>