<section class="usercontain">
  <form>
    <div class="tittle">
      <h2>Perfil</h2>
    </div>
    <div class="form">
      <div class="left">
        <div class="profileInput">
          <label for="text">Nombre</label>
          <p>{{user.name}}</p>
        </div>
        <div class="profileInput">
          <label for="text">Idiomas</label>
          <div>{{user.languages}}</div>
        </div>
        <div class="profileInput">
          <label for="text">Descripción</label>
          <div class="textarea">
            <p>{{user.description}}</p>
          </div>
        </div>
      </div>
      <div class="right">
        <div class="profilePhoto">
          <label for="text">Foto</label>
          <img src="{{user.imgPath}}" alt="{{user.name}}">
        </div>
        <div class="description">
          <label for="text">Descripción</label>
          <div class="textarea">
            <p>{{user.description}}</p>
          </div>
        </div>
        <div class="linksContainer">
          <a href="/user/editUser/{{user.id}}" class="greenbutton">Editar</a>
          <a href="/offer/all" class="greenbutton">Volver</a>
      </div>
      </div>
    </div>
  </form>

</section>